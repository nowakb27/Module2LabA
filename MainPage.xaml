<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Module2LabA.MainPage">

    <ScrollView>
        <StackLayout Padding="30,0" Spacing="25">
            <Image Source="dotnet_bot.png" HeightRequest="185" Aspect="AspectFit" SemanticProperties.Description="dot net bot in a race car number eight" />

            <Label Text="BMI Calculator" Style="{StaticResource Headline}" SemanticProperties.HeadingLevel="Level1" />

            <Entry x:Name="HeightEntry" Placeholder="Height (in feet)" Keyboard="Numeric" />
            <Entry x:Name="WeightEntry" Placeholder="Weight (in pounds)" Keyboard="Numeric" />

            <Button Text="Calculate BMI" Clicked="OnCalculateClicked" HorizontalOptions="Fill" />

            <Label x:Name="ResultLabel" Text="" Style="{StaticResource SubHeadline}" SemanticProperties.HeadingLevel="Level2" />
        </StackLayout>
    </ScrollView>



</ContentPage>
